@model WebApp.Models.User

@{
    ViewBag.Title = "Login";
}

@*<h2>Login</h2>*@
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Account"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="container">
                            <fieldset>
                                <legend>Log In</legend>

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Uname, "User Name")
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Uname, new { @class = "input-text", placeholder = "Username" })
                                    @Html.ValidationMessageFor(model => model.Uname)
                                </div>

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Password, "Password")
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Password, new { @class = "input-text", placeholder = "Password" })
                                    @Html.ValidationMessageFor(model => model.Password)
                                </div>

                                <p>
                                    <input type="submit" value="Log In" class="btn" />
                                </p>
                            </fieldset>
                        </div>                        
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
